<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!--      mood layout-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="9"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Пятница, 13 апреля"
                android:textColor="#cc80ff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="9"
                android:layout_columnSpan="1"
                android:layout_gravity="right"
                android:contentDescription="Графики"
                android:src="@drawable/ic_chart_icon" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Настроение"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="10"
                android:orientation="horizontal" >
                <Spinner
                    android:layout_margin="5dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="9"
                    android:layout_width="250dp"
                    android:id="@+id/moodspinner"/>

                <ImageButton
                    android:id="@+id/moodelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:layout_columnSpan="1"
                    android:layout_gravity="center"
                    android:contentDescription="Удалить"
                    android:src="@drawable/ic_cancel_24" />
            </GridLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/editmood"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text = "Редактировать"/>
        </LinearLayout>
        <!--      state layout-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Состояние"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="10"
                android:orientation="horizontal" >
                <Spinner
                    android:layout_width="250dp"
                    android:layout_margin="5dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="9"
                    android:id="@+id/statespinner"/>
                <ImageButton
                    android:id="@+id/statedelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Удалить"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:layout_columnSpan="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cancel_24" />
            </GridLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/editstate"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text = "Редактировать"/>
        </LinearLayout>
        <!--      doing layout-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Занятие"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <!--        time dropout list-->
            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="10"
                android:orientation="horizontal" >
                <Spinner
                    android:layout_margin="5dp"
                    android:layout_width="250dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="9"
                    android:id="@+id/timespinner"/>
                <ImageButton
                    android:id="@+id/timedelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Удалить"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:layout_columnSpan="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cancel_24" />
            </GridLayout>
            <!--        doing dropout list-->
            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:columnCount="10"
                android:orientation="horizontal" >
                <Spinner
                    android:layout_width="250dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="9"
                    android:id="@+id/doingspinner"/>
                <ImageButton
                    android:id="@+id/doingdelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Удалить"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:layout_columnSpan="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cancel_24" />
            </GridLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/editdoing"
                android:gravity="center"
                android:text = "Редактировать"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/calendar"
            android:layout_gravity="center"
            android:src="@drawable/ic_calendar_icon"
            />
    </GridLayout>
</ScrollView>